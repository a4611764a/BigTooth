<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/x10" >

    <com.zb.bittooth.customView.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="10dp"
        android:cropToPadding="true"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignTop="@id/img_head"
        android:layout_toRightOf="@id/img_head"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="10"
        android:singleLine="true"
        android:text="大牙为您精心推荐" />

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_head"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="10dp"
        android:text="我爱北京天安门，天安门上太阳升我爱北京天安门，天安门上太阳升我爱北京天安门，我爱北京天安门，天安门上太阳升,天安门上太阳升我爱北京天安门，天安门上太阳升我爱北京天安门，天安门上太阳升我爱北京天安门，天安门上太阳升我爱北京天安门，天安门上太阳升我爱北京天安门，天安门上太阳升" />

    <TextView
        android:id="@+id/tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:paddingRight="40dp"
        android:text="标签1" />
    <RelativeLayout android:layout_below="@+id/content" 
       	android:layout_width="fill_parent"
       	android:layout_height="@dimen/x40" 
       	android:padding="@dimen/x10"
       	android:background="@color/light_white"
        >
        <com.zb.bittooth.customView.MyWind8ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:scaleType="matrix"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/x3"
            android:src="@drawable/timeline_icon_share_disable" />

        <com.zb.bittooth.customView.MyWind8ImageView
            android:id="@+id/shoucang"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:scaleType="matrix"
            android:layout_toLeftOf="@id/share"
            android:src="@drawable/radar_card_around_collect_highlighted" />
    </RelativeLayout>

</RelativeLayout>
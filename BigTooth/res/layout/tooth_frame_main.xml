<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app1="http://schemas.android.com/apk/res/com.zb.bittooth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@color/bg_all"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/x10"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingTop="@dimen/y10" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="您的信息"
            android:textColor="@color/deep_orange"
            android:textSize="15sp" />

        <com.zb.bittooth.customView.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/x105"
            android:layout_height="@dimen/y105"
            android:layout_below="@id/title"
            android:layout_margin="@dimen/x20"
            android:scaleType="centerCrop"
            android:src="@drawable/tooth_frame_head"
            app1:riv_corner_radius="5dip" />

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/y20"
            android:layout_toRightOf="@id/imageView1"
            android:hint="请输入您喜欢的昵称"
            android:maxLength="10"
            android:textSize="15sp" />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/regist"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mogu"
                android:textColor="@color/deep_grey"
                android:gravity="center_vertical"
                android:text="位置丢失~"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignLeft="@id/name"
                android:layout_alignBottom="@+id/imageView1"
                android:textSize="13sp" />
        <Button
            android:id="@+id/regist"
            android:layout_width="@dimen/x48"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="加入"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="@dimen/x10" >

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="贴个标签"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <com.zb.bittooth.customView.FlowLayout
                    android:id="@+id/flowlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/x10" />
            </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/y10"
                       android:padding="@dimen/x10"
                    android:id="@+id/title3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="发个说说"
                    android:background="#ffffff"
                   android:textColor="@color/white"
                    android:textSize="15sp" />
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@color/white"
                android:paddingLeft="@dimen/x10"
                android:paddingBottom="@dimen/y10"
                android:paddingRight="@dimen/x10"
                 >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <EditText
                        android:id="@+id/jokes"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x60"
                        android:hint="请输入您笑话的内容"
                        android:textSize="15sp"
                      />
                    <Button
                        android:id="@+id/post"
                         android:layout_width="@dimen/x48"
                         android:layout_height="25dp"
                        android:layout_alignBaseline="@id/jokes"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="发送"
                        android:background="@drawable/button_selector"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             android:background="@drawable/background_scrollbarpanel"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone"
           />
    </FrameLayout>

</LinearLayout>